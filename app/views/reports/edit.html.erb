<h1><%= @report.name %></h1>
<div class="line"></div>

<%= form_tag( {:controller => :reports, :action => :update, :id => @report.to_param, :class=>"form-horizontal"}, {:method=>:put}) do %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being run:</h2>

      <ul>
      <% @report.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>  

  <%= fields_for :report do |ff| %>
    <%= render @report.to_param, :fields => ff %>
  <% end %>

  <div class="actions">
    <%= submit_tag "Run", class: "btn btn-success" %>
  </div>

<% end %>

