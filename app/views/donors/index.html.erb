<h1>Listing donors</h1>

<%= link_to 'New Donor', new_donor_path, class: "btn" %>

<table class="table table-hover table-bordered">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Zipcode</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>

<% @donors.each do |donor| %>
  <tr>
    <td><%= link_to donor.display_name, edit_donor_path(donor) %></td>
    <td><%= donor.state %></td>
    <td><%= donor.zipcode %></td>
    <td><%= donor.phone %></td>
    <td><%= donor.email %></td>
    <td style="width:100px;">
      <%= link_to edit_donor_path(donor) do %>
        <div class="h4sprite edit"></div>
      <% end %>
      <%= link_to donor do %>
        <div class="h4sprite printer"></div>
      <% end %>
      <%= link_to donor, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <div class="h4sprite trash"></div>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
